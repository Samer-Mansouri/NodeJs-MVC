<%- include('../partials/navbar.ejs') %>

<div class="container mt-2">
  <% if(user){ %>
    <div class="row mt-5">
      <div class="col-4">
        

        <!-- Button trigger modal -->
  <style>
    .img:hover{
      cursor: pointer;
    }  
  </style>
  <img 
  class="rounded-circle float-start mb-2 img" 
  src="<%- user.profilePic %>" 
  style="width:200px; height: 200px;" 
  data-bs-toggle="modal" 
  data-bs-target="#exampleModal">


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Profile Picture</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <img class=" float-start mb-2" src="<%- user.profilePic %>" style="width: 450px;">
      </div>
    </div>
  </div>
</div>
        
        
        
        
        <br>



        
        <% if(user._id == currentUser) {%>
          <form action="/profile/<%- user._id %> " method="POST" enctype="multipart/form-data">
            <input type="hidden" name="picture" value="picture">
            <div class="form-group mt-3">
              <input type="file" name="picture" class="form-control"  accept="image/*">
            </div>
            <div class="form-group mt-2">
              <button type="submit" class="btn btn-primary">Update Profile Picture</button>
            </div>
          </form>
        <% } %> 
      </div>
      <div class="col-8 mt-4">
        <h3><%- user.firstName %> <%- user.lastName  %> </h3>
        <h5 class="text-muted"><%- user.email %></h5>
        <h4 class="mt-3">Biography:</h4>
        <p><%- user.biography %> </p>
       </div>
    </div>
    <hr />

    <div class="row">
      <% if (message) { %>
        <div class="alert <%- alert %> " role="alert">
          <%- message %> 
        </div>
      <% } %>
        <% if(user._id == currentUser){ %> 
        <form action="/profile/<%- user._id %> " method="POST">
          <input type="hidden" name="profile" value="profile">
          <div class="form-group mt-2 mb-2">
            <label for="firstName">First Name</label>
            <input type="text" class="form-control" name="firstName" value=<%- user.firstName %> >
          </div>
      
          <div class="form-group  mb-2">
            <label for="lastName">Last Name</label>
            <input type="text" class="form-control" name="lastName" value=<%- user.lastName %> >
          </div>
      
          <div class="form-group  mb-2">
            <label for="email">Email</label>
            <input type="text" class="form-control" name="email" value=<%- user.email %> >
          </div>
      
      
          <div class="form-group  mb-2">
            <label for="dateOfBirth">Date Of Birth</label>
            <input type="date" class="form-control" name="dateOfBirth" value=<%- user.dateOfBirth %> >
          </div>

          <div class="form-group mb-2">
            <label for="biography">Biography</label>
            <textarea name="biography" class="form-control" ><%- user.biography %> </textarea>
          </div>
      
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
          <a href="/resetpassword" class="btn btn-outline-primary mt-2">Reset Password</a>
        </form>

        
        <% } %> 
        </div>
    </div>
  <% } %> 
</div>
<%- include('../partials/navbar.ejs') %>
<div class="container mt-3">


  <% if (message) { %>
    <div class="alert <%- alert %> mt-2" role="alert">
      <%- message %> 
    </div>
  <% } %>


  <form action="/postcreate" method="POST" enctype="multipart/form-data">
    <h2>Create a Post</h2><hr />
    

    <div class="form-group">
      <label for="content" class="mb-1">Exprimez-vous!</label>
      <textarea id="content" name="content" class="form-control"></textarea>
    </div>

    <div class="form-group">
      <label for="picture" class="mb-1">Ajouter une Image</label>
      <input type="file" name="picture" class="form-control"  accept="image/*">
    </div>

    <div class="from-group mt-2">
      <button type="submit" class="btn btn-primary">Create</button>
    </div>

  </form>
</div>